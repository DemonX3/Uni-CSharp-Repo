<Window x:Class="labWPF1.UnitConverter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labWPF1"
        mc:Ignorable="d"
        Title="Mass Converter" Height="250" Width="250" ResizeMode="CanMinimize">
    <Grid>
        <WrapPanel>
            <TextBlock x:Name="PoundLabel" Text="Mass (in pounds): " FontSize="16" Height="25" />
            <TextBox x:Name="PoundBox" Height="25" Width="120" PreviewTextInput="NumberValidationTextBox" />
            <Button x:Name="CalculateButton" Content="Calculate" DockPanel.Dock="Bottom" Padding="5" Height="25" Width="250" Click="CalculateBut" />
            <TextBlock x:Name="KiloLabel" Text="" FontSize="15" Margin="5" />
        </WrapPanel>
    </Grid>
</Window>
