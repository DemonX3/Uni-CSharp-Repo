<Window x:Class="LabWPF2.WindowOil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWPF2"
        mc:Ignorable="d"
        Title="Gas Station Manager" MinHeight="470" Height="470" MinWidth="600" Width="600" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Gas Station" Grid.Column="0" Foreground="DarkBlue" FontSize="16" HorizontalAlignment="Center" />
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Background="Transparent" BorderBrush="Gray" BorderThickness="0.3" Margin="5">
            <Grid x:Name="GasStationGrid" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" x:Name="GasPanel" VerticalAlignment="Center">
                    <Label Content="Gas" Margin="10"/>
                    <ComboBox x:Name="GasComboBox" Width="200" Margin="10" SelectionChanged="GasComboBox_SelectionChanged"/>
                </DockPanel>
                <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" x:Name="GasPricePanel" VerticalAlignment="Center">
                    <Label Content="Price" Margin="10"/>
                    <TextBox x:Name="GasPriceBox" Margin="10" Background="LightGray" IsReadOnly="True" Height="20" VerticalContentAlignment="Center"/>
                </DockPanel>
                <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" x:Name="GasCalculatorPanel" VerticalAlignment="Center">
                    <Border Background="Transparent" BorderBrush="Gray" BorderThickness="0.3" Margin="2">
                        <StackPanel DockPanel.Dock="Left" Margin="5">
                            <RadioButton x:Name="GasByAmountRadio" Content="Amount" DockPanel.Dock="Top" Margin="5" IsChecked="True" Click="GasByAmountRadio_Click"/>
                            <RadioButton x:Name="GasByPriceRadio" Content="Price" DockPanel.Dock="Top" Margin="5" Click="GasByPriceRadio_Click"/>
                        </StackPanel>
                    </Border>
                    <Border Background="Transparent" BorderBrush="Gray" BorderThickness="0.3" Margin="2">
                        <StackPanel DockPanel.Dock="Left" Margin="5">
                            <Border/>
                            <TextBox x:Name="GasByAmountTextbox" DockPanel.Dock="Top" Margin="5" MaxLength="12" IsReadOnly="False" Background="Transparent" TextChanged="GasByAmountTextbox_TextChanged" Text="0" PreviewTextInput="TextBox_DoublePreview"/>
                            <TextBox x:Name="GasByPriceTextbox" DockPanel.Dock="Top" Margin="5" MaxLength="12" IsReadOnly="True" Background="LightGray" TextChanged="GasByPriceTextbox_TextChanged" Text="0" PreviewTextInput="TextBox_DoublePreview"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
                <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Background="Transparent" BorderBrush="Gray" BorderThickness="0.3" Margin="2">
                    <DockPanel LastChildFill="true"  x:Name="GasTotalPanel" VerticalAlignment="Center">
                        <Label DockPanel.Dock="Right" Height="50" FontSize="12" Content="UAH" VerticalContentAlignment="Bottom"/>
                        <TextBox DockPanel.Dock="Right" x:Name="GasPriceTotalBox" IsReadOnly="True" Height="50" FontSize="30" Text="0,00" TextAlignment="Right" Margin="5" BorderThickness="0"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <Label Content="Mini-Cafe" Grid.Column="1" Foreground="DarkBlue" FontSize="16" HorizontalAlignment="Center" />
        <Border Grid.Column="1" Grid.RowSpan="2" Background="Transparent" BorderBrush="Gray" BorderThickness="0.3" Margin="5">
            <Grid Grid.Row="0" x:Name="MiniCafeGrid" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <DockPanel x:Name="MiniCafeLabelPanel" Grid.Column="1" Grid.Row="0" LastChildFill="False" Margin="5">
                    <Label Content="Amount" DockPanel.Dock="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label Content="Price" DockPanel.Dock="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </DockPanel>

                <StackPanel x:Name="CafeOptionCheckStack" Grid.Column="0" Grid.Row="1" Margin="2">
                    <!--<CheckBox x:Name="CafeOption_Template" Content="Placeholder" Click="CafeOption_Click"/>-->
                </StackPanel>
                <StackPanel x:Name="CafeOptionNumberStack" Grid.Column="1" Grid.Row="1" Margin="2">
                    <!--<DockPanel x:Name="CafeOptionNumbers_Template" LastChildFill="False">
                        <TextBox Width="60" Text="12,00" IsReadOnly="True" DockPanel.Dock="Left" Background="LightGray"/>
                        <TextBox Width="60" Text="5" DockPanel.Dock="Right" TextChanged="CafeOptionAmount_TextChanged"/>
                    </DockPanel>-->
                </StackPanel>

                <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Background="Transparent" BorderBrush="Gray" BorderThickness="0.3" Margin="2">
                    <DockPanel LastChildFill="true" VerticalAlignment="Center">
                        <Label DockPanel.Dock="Right" Height="50" FontSize="12" Content="UAH" VerticalContentAlignment="Bottom"/>
                        <TextBox DockPanel.Dock="Right" x:Name="CafePriceTotalBox" IsReadOnly="True" Height="50" FontSize="30" Text="0,00" TextAlignment="Right" Margin="5" BorderThickness="0"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <Label Content="Total Payment" Grid.ColumnSpan="2" Grid.Row="2" Foreground="DarkBlue" FontSize="16" HorizontalAlignment="Center" />
        <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Background="Transparent" BorderBrush="Gray" BorderThickness="0.3" Margin="5">
            <DockPanel LastChildFill="False" VerticalAlignment="Center" Margin="10">
                <Button x:Name="Btn_Calculate" Height="60" Width="200" Content="Calculate" FontSize="30" HorizontalAlignment="Center" Click="Btn_Calculate_Click"/>
                <Label DockPanel.Dock="Right" Height="50" FontSize="12" Content="UAH" VerticalContentAlignment="Bottom"/>
                <TextBox DockPanel.Dock="Right" x:Name="TotalPriceBox" IsReadOnly="True" Height="50" FontSize="40" Text="0,00" TextAlignment="Right" Margin="5" BorderThickness="0"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
