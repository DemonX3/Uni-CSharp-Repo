<Window x:Class="LabWPF2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWPF2"
        mc:Ignorable="d"
        Title="El Calculador" Height="300" Width="230" MinHeight="200" MinWidth="200">
    <Grid Margin="0,1,0,0" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="20"/>
            <RowDefinition Height="Auto" MinHeight="20"/>
            <RowDefinition Height="*" MinHeight="20"/>
            <RowDefinition Height="*" MinHeight="20"/>
            <RowDefinition Height="*" MinHeight="20"/>
            <RowDefinition Height="*" MinHeight="20"/>
            <RowDefinition Height="*" MinHeight="20"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox_History" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" TextAlignment="Right" Foreground="Gray" Height="15" FontSize="10" Margin="0,1,0,0"  IsReadOnly="True"/>
        <TextBox x:Name="TextBox_Main" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Text="0" TextAlignment="Right" Height="20" Margin="0,1,0,0"  IsReadOnly="True"/>

        <Button x:Name="Btn_CE" Content="CE" Grid.Column="0" Grid.Row="2" Click="Btn_CE_Click"/>
        <Button x:Name="Btn_C" Content="C" Grid.Column="1" Grid.Row="2" Click="Btn_C_Click"/>
        <Button x:Name="Btn_Back" Content="â†" Grid.Column="2" Grid.Row="2" Click="Btn_Back_Click"/>
        <Button x:Name="Btn_Div" Content="/" Grid.Column="3" Grid.Row="2" Click="Btn_Operation_Click"/>
        <Button x:Name="Btn_Mult" Content="*" Grid.Column="3" Grid.Row="3" Click="Btn_Operation_Click"/>
        <Button x:Name="Btn_Sub" Content="-" Grid.Column="3" Grid.Row="4" Click="Btn_Operation_Click"/>
        <Button x:Name="Btn_Add" Content="+" Grid.Column="3" Grid.Row="5" Click="Btn_Operation_Click"/>
        <Button x:Name="Btn_Result" Content="=" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2" Click="Btn_Result_Click"/>

        <Button x:Name="Btn_Dot" Content="." Grid.Column="0" Grid.Row="6" Click="Btn_Dot_Click"/>
        <Button x:Name="Btn_Num_0" Content="0" Grid.Column="1" Grid.Row="6" Click="Btn_Num_0_Click"/>
        <Button x:Name="Btn_Num_1" Content="1" Grid.Column="0" Grid.Row="5" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_2" Content="2" Grid.Column="1" Grid.Row="5" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_3" Content="3" Grid.Column="2" Grid.Row="5" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_4" Content="4" Grid.Column="0" Grid.Row="4" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_5" Content="5" Grid.Column="1" Grid.Row="4" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_6" Content="6" Grid.Column="2" Grid.Row="4" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_7" Content="7" Grid.Column="0" Grid.Row="3" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_8" Content="8" Grid.Column="1" Grid.Row="3" Click="Btn_Num_Click"/>
        <Button x:Name="Btn_Num_9" Content="9" Grid.Column="2" Grid.Row="3" Click="Btn_Num_Click"/>
    </Grid>
</Window>
